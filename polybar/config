[module/pkg]
type = custom/script
interval = 5
format = %{A:~/dotfiles/scripts/update.py:}<label>%{A}
label = "%output:0:30%"
exec = ~/dotfiles/scripts/update.py --show
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/redshift]
type = custom/script
interval = 5
exec = ~/dotfiles/scripts/redshift.sh

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/keyboard]
