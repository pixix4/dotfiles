#
# wm independent hotkeys
#

# terminal emulator
super + Return
    termite

# program launcher
super + s
    rofi -modi drun -show drun -dpi 120

super + d
    rofi -modi run -show run -dpi 120

super + q
    rofi -modi run -show window -dpi 120

super + c
    rofi -show calc -modi calc -no-show-match -no-sort

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + {e,r}
    bspc {quit,wm -r}

# close and kill
super + {shift + ,shift + ctrl + }q
    bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
    bspc desktop -l next

#
# focus/swap
#

super + {shift + t, shift + s, f}
    $HOME/dotfiles/bspwm/toggle.sh {pseudo_tiled,floating,fullscreen}

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
    bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
    bspc node -f @{parent,brother,first,second}

## focus the next/previous node in the current desktop
#super + {_,shift + }c
#    bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
    bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + Tab
    bspc desktop -f last

## focus the older or newer node in the focus history
#super + shift + {o,i}
#    bspc wm -h off; \
#    bspc node {older,newer} -f; \
#    bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

super + t
    $HOME/dotfiles/scripts/run-and-switch.sh Telegram telegram-desktop XI

super + shift + t
    bspc node -d XI

super + z
    $HOME/dotfiles/scripts/run-and-switch.sh thunderbird thunderbird XII

super + shift + z
    bspc node -d XII

#
# preselect
#

# preselect the direction
super + ctrl + {Left,Down,Up,Right}
    bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {Left,Down,Up,Right}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {Left,Down,Up,Right}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}

# Custom

super + l
    $HOME/dotfiles/screen/lock.sh --mute

XF86PowerOff
    $HOME/dotfiles/screen/lock.sh --mute

super + shift + l
    $HOMEon_status_change/dotfiles/screen/lock.sh

super + n
    networkmanager_dmenu

super + o
    $HOME/dotfiles/theming/theming --toggle

super + F12
    mpc toggle

super + Home
    mpc toggle

XF86TouchpadToggle
    ~/dotfiles/scripts/toggletouchpad.sh

XF86Tools
    ~/dotfiles/scripts/toggletouchpad.sh

XF86MonBrightnessDown
    ~/dotfiles/scripts/backlight.py darker

XF86MonBrightnessUp
    ~/dotfiles/scripts/backlight.py lighter

XF86Display
    ~/dotfiles/scripts/rofi-xrandr.sh 'bspc wm -r'

super + shift + p
    ~/dotfiles/scripts/rofi-xrandr.sh 'bspc wm -r'

XF86AudioRaiseVolume
    ~/dotfiles/scripts/volume_up.sh

XF86AudioLowerVolume
    ~/dotfiles/scripts/volume_down.sh

XF86AudioMute
    ~/dotfiles/scripts/volume_toggle.sh

XF86AudioMicMute
    ~/dotfiles/scripts/mic_toggle.sh

XF86AudioPlay
    mpc toggle

XF86AudioPause
    mpc toggle

XF86AudioNext
    mpc next

XF86AudioPrev
    mpc prev

### Screenshots ###
# Take screenshot
super + Print
    sleep 0.2 && scrot -e 'mv $f ~/Pictures/Screenshots && sxiv ~/Pictures/Screenshots/$n'

# Take screenshot and copy to clipboard
super + shift + Print
    sleep 0.2 && scrot -o /tmp/screenshot.png && xclip -selection clipboard -t image/png /tmp/screenshot.png && sxiv /tmp/screenshot.png

# Take selection of screenshot
super + ctrl + Print
    sleep 0.2 && scrot -s -e 'mv $f ~/Pictures/Screenshots && sxiv ~/Pictures/Screenshots/$n'

# Take selection of screenshot and copy to clipboard
super + ctrl + shift + Print
    sleep 0.2 && scrot -s -o /tmp/screenshot.png && xclip -selection clipboard -t image/png /tmp/screenshot.png && sxiv /tmp/screenshot.png

# Take screenshot of current window
super + alt + Print
    sleep 0.2 && scrot -ub -e 'mv $f ~/Pictures/Screenshots && sxiv ~/Pictures/Screenshots/$n'

# Take screenshot of current window and copy to clipboard
super + alt + shift + Print
    sleep 0.2 && scrot -ub -o /tmp/screenshot.png && xclip -selection clipboard -t image/png /tmp/screenshot.png && sxiv /tmp/screenshot.png


